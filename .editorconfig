# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.java]
indent_style = tab
max_line_length = 180
indent_size = 4
ij_continuation_indent_size = 8
trim_trailing_whitespace = true

[*.xml]
indent_style = space
indent_size = 4

